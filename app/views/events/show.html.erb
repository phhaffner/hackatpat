<p id="notice"><%= notice %></p>

<p>
  <strong>Nom:</strong>
  <%= @event.nom %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Organisateur:</strong>
  Utilisateur <%= @event.user_id %>
</p>


<p>
  <strong>Heure:</strong>
  <%= @event.heure %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>


<% if current_user =! @event.user %>

<%= link_to 'Editer', edit_event_path(@event) %> 



<%= link_to "Delete", delete_event_path(@event.id), data: {confirm: "Are you sure?"}%>

<% else %>

<%= link_to 'Reserver', create_resa_path(@event) %>

<% end %>


<%= link_to 'Retour', events_path %>
